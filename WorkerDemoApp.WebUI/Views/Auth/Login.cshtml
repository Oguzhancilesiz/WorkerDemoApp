@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-5 glass-card p-5">
    <h3 class="text-center mb-4"><i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap</h3>
    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label class="form-label">E-posta</label>
            <input asp-for="Email" class="form-control" placeholder="ornek@mail.com" />
        </div>
        <div class="mb-4">
            <label class="form-label">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="••••••" />
        </div>
        <button type="submit" class="btn btn-gradient w-100 py-2 fw-semibold">Giriş Yap</button>
    </form>
    <p class="mt-3 text-center">
        Hesabın yok mu? <a asp-action="Register" class="text-info">Kayıt Ol</a>
    </p>
</div>

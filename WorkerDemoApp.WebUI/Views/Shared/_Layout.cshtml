<!DOCTYPE html>
<html lang="tr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkerDemoApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg,#0f2027,#203a43,#2c5364);
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            color: #fff;
        }
        nav.navbar {
            backdrop-filter: blur(12px);
            background: rgba(255,255,255,0.1) !important;
        }
        .nav-link, .navbar-brand { color: #f0f0f0 !important; }
        .glass-card {
            background: rgba(255,255,255,0.08);
            border-radius: 1rem;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }
        footer {
            backdrop-filter: blur(6px);
            background: rgba(255,255,255,0.08);
            color: #ccc;
        }
        .btn-gradient {
            background: linear-gradient(45deg,#00c6ff,#0072ff);
            border: none;
            color: #fff;
        }
        .btn-gradient:hover { opacity: .85; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg border-bottom mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gear-fill me-1"></i> WorkerDemoApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="nav" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Register">Kayıt Ol</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Login">Giriş Yap</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container d-flex justify-content-center align-items-center" style="min-height:70vh;">
        @RenderBody()
    </main>

    <footer class="py-3 mt-5 text-center">
        <small>&copy; @DateTime.Now.Year - WorkerDemoApp</small>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @using System.Text.Json

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Global helper
        function showAlert(type, title, message) {
            Swal.fire({
                icon: type,
                title: title,
                text: message,          // HTML değilse 'text' doğru
                confirmButtonColor: '#007bff',
                background: 'rgba(25,25,35,0.95)',
                color: '#fff'
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Razor stringlerini JS stringine güvenli şekilde serialize et
            const msg  = @Html.Raw(JsonSerializer.Serialize(TempData["Message"]));
            const type = @Html.Raw(JsonSerializer.Serialize(TempData["MessageType"] ?? "info"));

            if (msg) {
                Swal.fire({
                    icon: type || 'info',
                    title: type === 'success' ? 'Başarılı!' :
                           type === 'error'   ? 'Hata!'     :
                           type === 'warning' ? 'Uyarı!'    : 'Bilgi',
                    text: msg, // Türkçe karakterler doğru çıkar
                    confirmButtonColor: '#007bff',
                    background: 'rgba(25,25,35,0.95)',
                    color: '#fff'
                });
            }
        });
    </script>



</body>
</html>

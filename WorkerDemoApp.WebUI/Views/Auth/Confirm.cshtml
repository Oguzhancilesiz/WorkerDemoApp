@model ConfirmViewModel
@{
    ViewData["Title"] = "Doğrulama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-5 glass-card p-5">
    <h3 class="text-center mb-4"><i class="bi bi-shield-check me-2"></i>Hesabını Doğrula</h3>
    <form asp-action="Confirm" method="post">
        <input asp-for="Email" type="hidden" />
        <div class="mb-4">
            <label class="form-label">Doğrulama Kodu</label>
            <input asp-for="Code" class="form-control" placeholder="6 haneli kod" />
        </div>
        <button type="submit" class="btn btn-gradient w-100 py-2 fw-semibold">Doğrula</button>
    </form>
    <p class="mt-3 text-center">
        Mail gelmedi mi? <a asp-action="Resend" class="text-info">Tekrar Gönder</a>
    </p>
</div>

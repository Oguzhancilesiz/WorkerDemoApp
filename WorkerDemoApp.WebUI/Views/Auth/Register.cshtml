@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-5 glass-card p-5">
    <h3 class="text-center mb-4"><i class="bi bi-person-plus-fill me-2"></i>Kayıt Ol</h3>
    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label class="form-label">E-posta</label>
            <input asp-for="Email" class="form-control" placeholder="ornek@mail.com" />
        </div>
        <div class="mb-4">
            <label class="form-label">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="••••••" />
        </div>
        <button type="submit" class="btn btn-gradient w-100 py-2 fw-semibold">Kayıt Ol</button>
    </form>
    <p class="mt-3 text-center">
        Zaten hesabın var mı? <a asp-action="Login" class="text-info">Giriş Yap</a>
    </p>
</div>
